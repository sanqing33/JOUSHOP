{
	"easycom": {
		"autoscan": true,
		// 注意一定要放在custom里，否则无效，https://ask.dcloud.net.cn/question/131175
		"custom": {
			"^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/categroy/categroy",
			"style": {
				"navigationBarTitleText": "分类",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "搜索",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/details/details",
			"style": {
				"navigationBarTitleText": "商品详情",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/order/order",
			"style": {
				"navigationBarTitleText": "订单",
				"enablePullDownRefresh": false
			}
		}

	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"list": [{
				"pagePath": "pages/index/index", // 注意：这里的路径是相对于pages.json的路径，而不是相对于当前文件的路径。所以不需要添加"pages/"前缀。
				"iconPath": "static/tabBar/首页.png",
				"selectedIconPath": "static/tabBar/首页2.png",
				"text": "首页"

			},
			{
				"pagePath": "pages/categroy/categroy", // 注意：这里的路径是相对于pages.json的路径，而不是相对于当前文件的路径。所以不需要添加"pages/"前缀。
				"iconPath": "static/tabBar/分类.png",
				"selectedIconPath": "static/tabBar/分类2.png",
				"text": "分类"
			},
			{
				"pagePath": "pages/mine/mine", // 注意：这里的路径是相对于pages.json的路径，而不是相对于当前文件的路径。所以不需要添加"pages/"前缀。
				"iconPath": "static/tabBar/个人中心.png",
				"selectedIconPath": "static/tabBar/个人中心2.png",
				"text": "我的"
			}
		],
		"selectedColor": "#ff0000"
	},
	"uniIdRouter": {}
}